#!/bin/bash
source .ports

h="plannies-mate.$PROXY_DOMAIN"

echo "=== System Status ==="
bin/ssh-proxy $* 'uptime'
echo
bin/ssh-proxy $* 'free -mw'

echo -e "\n=== Security Status ==="
bin/ssh-proxy $* 'sudo fail2ban-client status'
echo
bin/ssh-proxy $* 'sudo ufw status verbose'

