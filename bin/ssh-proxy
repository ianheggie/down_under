#!/usr/bin/env bash
cd "$(dirname "$0")/.."

if [ $# -lt 1 ]; then
    echo "Usage: $(basename $0) [ssh-options]"
    exit 1
fi

if [ -z "$PROXY_DOMAIN" ]; then
    echo "Error: PROXY_DOMAIN environment variable not set"
    exit 1
fi

source .ports
HOST="plannies-mate.$PROXY_DOMAIN"

remote_user=handyman
case "$1" in
-root)
    remote_user=root
    shift
    ;;
esac

exec ssh -p "$SSH_PORT" "$remote_user@$HOST" "$@"
